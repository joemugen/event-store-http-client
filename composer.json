{
  "name": "prooph/event-store-http-client",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Sascha-Oliver Prolic",
      "email": "saschaprolic@googlemail.com"
    }
  ],
  "description": "Event Store HTTP Client",
  "keywords": [
    "EventStore",
    "EventSourcing",
    "DDD",
    "prooph"
  ],
  "prefer-stable": true,
  "repositories": [
    {
      "name": "prooph/event-store",
      "type": "git",
      "url": "https://github.com/joemugen/event-store-client.git"
    }
  ],
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "php-http/discovery": "^1.9.1",
    "php-http/httplug": "^2.2",
    "php-http/message": "^1.8.0",
    "php-http/message-factory": "^1.0.2",
    "prooph/event-store": "dev-feature/php8-support"
  },
  "require-dev": {
    "phpspec/prophecy": "^1.11.1",
    "phpunit/phpunit": "^9.1",
    "doctrine/instantiator": "^1.3.1",
    "guzzlehttp/guzzle": "^6.5.5",
    "php-coveralls/php-coveralls": "^2.2",
    "php-http/guzzle6-adapter": "^2.0.1",
    "prooph/php-cs-fixer-config": "^0.3.1",
    "vimeo/psalm": "^3.12.2"
  },
  "autoload": {
    "psr-4": {
      "Prooph\\EventStoreHttpClient\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ProophTest\\EventStoreHttpClient\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "php-cs-fixer fix -v --diff",
    "test": "phpunit"
  },
  "config": {
    "sort-packages": true
  }
}
